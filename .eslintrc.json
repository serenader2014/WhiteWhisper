{
  "parser": "babel-eslint",
  "extends": ["airbnb-base"],
  "rules": {
     "indent": ["error", 4, {"SwitchCase": 1}],
     "no-underscore-dangle": ["error", {"allow": ["_id", "_doc"]}]
  },
  "globals": {
    "config": false,
    "fs": false
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true,
    "jasmine": true
  }
}
